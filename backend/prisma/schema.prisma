generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId        String    @id @default(uuid())
  firstname     String
  lastname      String
  email         String    @unique
  password      String
  updatedAt     DateTime? @updatedAt
  role          String    @default("user")
  accountStatus String    @default("active")
  isNotified    Boolean   @default(false)
  bookings      Booking[]
  reviews       Review[]
}

model Tour {
  id          String    @id @default(uuid())
  destination String
  description String?
  price       Float
  tourType    String
  createdAt   DateTime  @default(now())
  startDate   DateTime 
  endDate     DateTime  
  bookings    Booking[]
  reviews     Review[]
  isActive    Boolean   @default(true)
}

model Booking {
  id            String   @id @default(uuid())
  userId        String   
  tourId        String   
  createdAt     DateTime @default(now())
  numberOfPeople Int
  user          User     @relation(fields: [userId], references: [userId])
  tour          Tour     @relation(fields: [tourId], references: [id])
}

model Review {
  id        String   @id @default(uuid())
  content   String
  rating    Int
  userId    String   
  tourId    String   
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [userId])
  tour      Tour     @relation(fields: [tourId], references: [id])

  @@unique([userId, tourId])
}